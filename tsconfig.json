{
  "compilerOptions": {
    "outDir": "./dist", // 빌드된 파일을 dist 폴더에 저장
    "rootDir": "./src", // TypeScript 파일들이 src 폴더 안에 있음
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonjs"
  },
  "include": [
    "src/**/*" // src 폴더 안의 모든 파일을 포함
  ],
  "exclude": [
    "node_modules" // node_modules 폴더는 제외
  ]
}
